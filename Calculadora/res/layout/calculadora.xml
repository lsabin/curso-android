<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Calculadora" >

    <GridLayout
        android:id="@+id/gridBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoResultado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:columnCount="4"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBorrar"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="C" 
            android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnDividir"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="%" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnMultiplicar"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="X" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnBorrarCaracter"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="@string/borrado" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn7"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="7" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn8"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="8" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn9"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="9" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnMenos"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="-" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn4"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="4" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn5"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="5" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn6"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="6" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnMas"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="+" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn1"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="1" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn2"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="2" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn3"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="3" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnParentesis"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="()" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btn0"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="4"
            android:text="0" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnPunto"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="4"
            android:text="." android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnSigno"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="4"
            android:text="+/-" android:background="@drawable/green_button" />

        <Button
            android:id="@+id/btnIgual"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="4"
            android:text="=" android:background="@drawable/green_button" />
    </GridLayout>

    <EditText
        android:id="@+id/textoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ems="10" />

</RelativeLayout>